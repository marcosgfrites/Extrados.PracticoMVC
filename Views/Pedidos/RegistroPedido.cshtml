@model PracticoMVC.Models.PedidoModelo
@{DateTime fechaHora = DateTime.Now;}

@{
    ViewBag.Title = "Registro de Pedidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        @if (ViewBag.Message != null)
        {
            <div class="row" style="margin-top:2%;">
                <div class="col-md-8">
                    <div class="@ViewBag.Class" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @ViewBag.Message
                    </div>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-lg-12">
                <button class="btn btn-primary btn-warning" title="Volver atrás" style="position: absolute; right: 0;" onclick='window.location="@Url.Action("SelectCliente","Pedidos")"' type="button"><i class="fas fa-arrow-alt-circle-left"></i></button>
                <br />
                <br />
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <h4> Registro de Pedidos </h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("RegistroPedido", "Pedidos", FormMethod.Post))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
                        <br />
                        <h4>Datos de Cliente</h4>
                        <hr />
                        <div class="row form-group">
                            <div class="col col-md-2">
                                @Html.LabelFor(model => model.CodigoCliente, htmlAttributes: new { @class = "form-control-label" })
                            </div>
                            <div class="col col-md-2">
                                @Html.EditorFor(model => model.CodigoCliente, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control", @placeholder = "Aquí debe autocompletarse el código de cliente...", @style = "text-transform:uppercase;", @onkeyup = "javascript:this.value=this.value.toUpperCase()" } })
                                @Html.ValidationMessageFor(model => model.CodigoCliente, "", new { @class = "text-danger" })
                            </div>
                            <div class="col col-md-2">
                                @Html.LabelFor(model => model.RazonSocialCliente, htmlAttributes: new { @class = "form-control-label" })
                            </div>
                            <div class="col col-md-6">
                                @Html.EditorFor(model => model.RazonSocialCliente, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control", @placeholder = "Aquí debe autocompletarse la razón social de cliente...", @style = "text-transform:uppercase;", @onkeyup = "javascript:this.value=this.value.toUpperCase()" } })
                                @Html.ValidationMessageFor(model => model.RazonSocialCliente, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <h4>Datos de Pedido</h4>
                        <hr />
                        <div class="row form-group">
                            <div class="col col-md-2">
                                @Html.LabelFor(model => model.NumeroPedido, htmlAttributes: new { @class = "form-control-label" })
                            </div>
                            <div class="col col-md-2">
                                @Html.EditorFor(model => model.NumeroPedido, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control", @placeholder = "X", @style = "text-transform:uppercase;", @onkeyup = "javascript:this.value=this.value.toUpperCase()" } })
                                @Html.ValidationMessageFor(model => model.NumeroPedido, "", new { @class = "text-danger" })
                            </div>
                            <div class="col col-md-2">
                                <span>Fecha y Hora</span>
                            </div>
                            <div class="col col-md-3">
                                <input type="text" class="form-control" name="FechaHoraActual" id="FechaHoraActual" value="@fechaHora" readonly="readonly" />
                            </div>
                        </div>
                        <h5>Detalle</h5>
                        <div class="row form-group">
                            <div class="col col-md-7">
                                <input type="text" class="form-control" name="ProductoBuscado" id="ProductoBuscado" />
                            </div>
                            <div>
                                <button class="btn btn-default btn-secondary" title="Buscar producto..." name="Buscar" id="Buscar" value="Buscar" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="row form-group">
                            <div class="col-lg-12">
                                <input type="submit" style="margin-left:45%" class="btn btn-primary btn-success" name="Registrar" id="Registrar" value="Registrar" />
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>